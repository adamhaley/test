#search-box
	margin-bottom 10px

.search-result
	border-right 1px solid black
	border-bottom 1px solid black
	&:before
		content ""
		display block
		padding-top 100%
		
	.content
		position  absolute;
		top 0
		left 0
		bottom 0
		right 0
		background-size cover

	.title
		position absolute
		bottom 0
		width 100%
		height 20%
		text-align center
